{
    "name": "Go",
    "dockerComposeFile": ["../../docker-compose.yml"],
    "service": "app",
    "runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "go.gopath": "/go"
    },
    "extensions": ["golang.Go"],
    "forwardPorts": [8000],
    "workspaceFolder": "/backup-server",
    "shutdownAction": "none"
}